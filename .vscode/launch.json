    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: curvcfg show profiles",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/packages/curvtools/src/curvtools/cli/curvcfg/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/packages/curvtools/src",
                "CURV_ROOT_DIR": "/home/mwg/ecp5-first-steps/my-designs/riscv-soc",
                "CURV_BUILD_DIR": "/home/mwg/ecp5-first-steps/my-designs/riscv-soc/build"
            },
            "args": [
                "show",
                "--board",
                "ulx3s",
                "--device",
                "85f",
                "profiles"
            ]
        },

        {
            "name": "Python Debugger: curvcfg (no args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/packages/curvtools/src/curvtools/cli/curvcfg/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/packages/curvtools/src",
                "CURV_ROOT_DIR": "/home/mwg/ecp5-first-steps/my-designs/riscv-soc",
                "CURV_BUILD_DIR": "/home/mwg/ecp5-first-steps/my-designs/riscv-soc/build"
            },
            "args": []
        },

        {
            "name": "Python Debugger: curvcfg (board merge)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/packages/curvtools/src/curvtools/cli/curvcfg/cli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "board",
                "merge",
                "--board=ulx3s",
                "--device=85f",
                "--schema=/home/mwg/ecp5-first-steps/my-designs/riscv-soc/boards/schema/schema.toml",
                "--schema=/home/mwg/ecp5-first-steps/my-designs/riscv-soc/boards/schema/schema_flash.toml",
                "--merged-board-toml-out=build/generated/config/merged_board.toml",
                "--dep-file-out=build/generated/make/board.mk.d"
            ]
        }
    ]
}